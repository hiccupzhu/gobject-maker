
G_CFLAGS = $(shell pkg-config gobject-2.0 --cflags)
G_LIBS = $(shell pkg-config gobject-2.0 --libs)

CFLAGS = -ansi -pedantic -O2 -Wall $(G_CFLAGS)
LFLAGS = $(G_LIBS)

CC = gcc
RM = rm

all: <prefix_lower_case>_<typename_lower_case>.o

# Compile and Assemble C Source Files into Object Files
%.o: %.c %.h
	$(CC) -c $(CFLAGS) $*.c

clean: 
	$(RM) <prefix_lower_case>_<typename_lower_case>.o

